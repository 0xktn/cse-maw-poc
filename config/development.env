# Development Configuration
# For local development and testing

# AWS Configuration
AWS_REGION=ap-southeast-1
AWS_PROFILE=default

# KMS Configuration
# KMS_KEY_ID will be set automatically by setup script
# KMS_KEY_ID=

# EC2 Instance Configuration
INSTANCE_TYPE=m5.xlarge
KEY_NAME=nitro-enclave-key
VOLUME_SIZE=30

# Enclave Configuration
ENCLAVE_CPU_COUNT=2
ENCLAVE_MEMORY_MB=1024
ENCLAVE_CID=16
ENCLAVE_DEBUG_MODE=true  # OK for development

# Temporal Configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=confidential-workflow-poc
TASK_QUEUE=confidential-workflow-tasks

# vsock-proxy Configuration
VSOCK_PROXY_PORT=8000
VSOCK_PROXY_TARGET=kms.ap-southeast-1.amazonaws.com:443

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# Security
PRODUCTION_MODE=false
