# Production Configuration
# Copy this file to .env and customize for your environment

# AWS Configuration
AWS_REGION=ap-southeast-1
AWS_PROFILE=default

# KMS Configuration
# KMS_KEY_ID will be set automatically by setup script
# KMS_KEY_ID=

# EC2 Instance Configuration
INSTANCE_TYPE=m5.xlarge
KEY_NAME=nitro-enclave-key
VOLUME_SIZE=30

# Enclave Configuration
ENCLAVE_CPU_COUNT=2
ENCLAVE_MEMORY_MB=2048
ENCLAVE_CID=16
ENCLAVE_DEBUG_MODE=false

# Temporal Configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=confidential-workflow-poc
TASK_QUEUE=confidential-workflow-tasks

# vsock-proxy Configuration
VSOCK_PROXY_PORT=8000
VSOCK_PROXY_TARGET=kms.ap-southeast-1.amazonaws.com:443

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
# WARNING: Never enable debug mode in production!
# Debug mode disables Nitro Enclave security features
PRODUCTION_MODE=true
